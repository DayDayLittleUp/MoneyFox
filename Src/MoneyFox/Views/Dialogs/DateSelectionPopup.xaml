<xct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:resources="clr-namespace:MoneyFox.Core.Resources;assembly=MoneyFox.Core"
       xmlns:xct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
       Color="Transparent"
       x:Class="MoneyFox.Views.Dialogs.DateSelectionPopup">

    <Grid BackgroundColor="{AppThemeBinding Dark={StaticResource CardBackgroundDark}, Light={StaticResource CardBackgroundLight}}"
          VerticalOptions="Center"
          HorizontalOptions="Center"
          Padding="16"
          WidthRequest="300">

        <StackLayout>
            <Label Text="{x:Static resources:Strings.SelectDateLabel}"
                Style="{DynamicResource TextHead}" />

            <Label Style="{DynamicResource BaseLabel}"
                Text="{x:Static resources:Strings.TimeRangeStartLabel}"
                HorizontalOptions="StartAndExpand" />

            <DatePicker Date="{Binding StartDate}" />

            <Label Style="{DynamicResource BaseLabel}" />
            <DatePicker Date="{Binding EndDate}" />

            <Button Text="{x:Static resources:Strings.DoneLabel}"
                Clicked="Button_OnClicked" />
        </StackLayout>

    </Grid>
</xct:Popup>