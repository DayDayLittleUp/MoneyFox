<?xml version="1.0" encoding="utf-8"?>

<controls:ModalContentPage
    xmlns:controls="clr-namespace:MoneyFox.Controls"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:accounts="clr-namespace:MoneyFox.Views.Accounts"
    xmlns:resources="clr-namespace:MoneyFox.Core.Resources;assembly=MoneyFox.Core"
    Title="{x:Static resources:Strings.AddAccountLabel}"
    x:Class="MoneyFox.Views.Accounts.AddAccountPage">

    <ContentPage.Content>
        <ScrollView Padding="15,0,15,0">
            <StackLayout>
                <accounts:ModifyAccountContentView />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</controls:ModalContentPage>