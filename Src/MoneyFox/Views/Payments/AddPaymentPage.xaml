<?xml version="1.0" encoding="utf-8"?>

<control:ModalContentPage xmlns:control="clr-namespace:MoneyFox.Controls"
                          xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:payments="clr-namespace:MoneyFox.Views.Payments"
                          xmlns:resources="clr-namespace:MoneyFox.Core.Resources;assembly=MoneyFox.Core"
                          Title="{x:Static resources:Strings.AddPaymentLabel}"
                          mc:Ignorable="d"
                          x:Class="MoneyFox.Views.Payments.AddPaymentPage">

    <ContentPage.Content>
        <ScrollView Padding="15,0,15,0">
            <StackLayout>
                <payments:ModifyPaymentContentView />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</control:ModalContentPage>