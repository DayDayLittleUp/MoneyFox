<?xml version="1.0" encoding="utf-8"?>

<controls1:ModalContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:MoneyFox.Core.Resources;assembly=MoneyFox.Core"
    xmlns:controls1="using:MoneyFox.Controls"
    xmlns:budget="using:MoneyFox.Views.Budget"
    xmlns:budget1="using:MoneyFox.ViewModels.Budget"
    Title="{x:Static resources:Strings.EditBudgetTitle}"
    x:DataType="budget1:EditBudgetViewModel"
    x:Class="MoneyFox.Views.Budget.EditBudgetPage"
    Visual="Material">

    <ContentPage.Content>
        <Grid RowDefinitions="*, Auto">
            <budget:ModifyBudgetView Grid.Row="0" />
            <Button Grid.Row="1"
                    Margin="12"
                    Style="{StaticResource WarningButton}"
                    Command="{Binding DeleteBudgetCommand}"
                    Text="{x:Static resources:Strings.DeleteLabel}" />
        </Grid>
    </ContentPage.Content>
</controls1:ModalContentPage>