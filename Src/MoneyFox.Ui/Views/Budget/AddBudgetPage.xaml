<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:MoneyFox.Core.Resources;assembly=MoneyFox.Core"
    xmlns:budget="clr-namespace:MoneyFox.Ui.Views.Budget"
    Title="{x:Static resources:Strings.AddBudgetTitle}"
    x:DataType="budget:AddBudgetViewModel"
    x:Class="MoneyFox.Ui.Views.Budget.AddBudgetPage"
    Visual="Material">
    
    <ScrollView Padding="15,0,15,0">  
        <VerticalStackLayout Spacing="6">
            <budget:ModifyBudgetView />
            <Button Command="{Binding SaveBudgetCommand}" Text="{x:Static resources:Strings.SaveLabel}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>