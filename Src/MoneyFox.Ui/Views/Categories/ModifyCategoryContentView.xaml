<?xml version="1.0" encoding="UTF-8"?>

<ContentView
    x:Class="MoneyFox.Ui.Views.Categories.ModifyCategoryContentView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:MoneyFox.Core.Resources;assembly=MoneyFox.Core"
    xmlns:controls="clr-namespace:MoneyFox.Ui.Controls">

    <ContentView.Content>
        <StackLayout>
            <controls:TextEntry EntryPlaceholder="{x:Static resources:Strings.CategoryNameLabel}"
                                EntryText="{Binding SelectedCategory.Name}" />

            <controls:TextEntry EntryPlaceholder="{x:Static resources:Strings.NoteLabel}"
                                EntryText="{Binding SelectedCategory.Note}" />

            <StackLayout CompressedLayout.IsHeadless="True" Orientation="Horizontal">
                <CheckBox
                    HorizontalOptions="Start"
                    IsChecked="{Binding SelectedCategory.RequireNote}"
                    VerticalOptions="Center" />
                <Label
                    Margin="-20,0,0,0"
                    HorizontalOptions="StartAndExpand"
                    Text="{x:Static resources:Strings.RequireNoteCheckbox}"
                    VerticalOptions="Center" />
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>